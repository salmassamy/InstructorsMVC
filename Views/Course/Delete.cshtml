@model Day2Task.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<h1>Delete Course</h1>

<h3>Are you sure you want to delete this course?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Hours</dt>
       
